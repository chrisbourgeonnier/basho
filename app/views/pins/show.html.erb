<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <div class="d-flex justify-content-center pt-2 gap-2">
      <%= cl_image_tag @pin.photo.key, height: "300", crop: :scale %>
      </div>
      <br>
      <h1 class="py-2"><%= @pin.name %></h1>
      <br>
      <h4 class="py-2"><%= @pin.address %></h4>
      <br>
      <p class="py-2">Tags</p>
      <ul class="py-2">
        <% tags = @pin.tag_list %>
        <% tags.each do |tag| %>
        <li class="tags"><%= tag %></li>
        <% end %>
        </ul>
      <%= simple_form_for(@pin) do |f| %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6 mb-3">
      <p class="py-2">Rating : <%= @pin.rating %>/5</p>
      <p class="py-2">Comments :</p>
      <%= @pin.comments  %>
      <div class="row justify-content-center">
        <div class="col-12 col-sm-6 py-2">
          <div class="d-flex justify-content-between py-2">
            <% if @pin.visited %>
              <div class="tags">Visited</div>
              <% else %>
              <div class="tags">Not visited</div>
              <% end %>
            <% if @pin.private %>
              <div class="tags">Private</div>
              <% else %>
              <div class="tags">Public</div>
              <% end %>
          </div>
          </div>
        </div>
      <% end %>
      <div class="row justify-content-center py-3">
      <a href="/pins/index" class="btn btn-primary">Back to my pins</a>
      </div>
    </div>
  </div>
</div>
