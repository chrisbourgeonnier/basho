<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <h1><%= @pin.name %></h1>
      <br>
      <h4><%= @pin.address %></h4>
      <br>
      <%= simple_form_for(@pin) do |f| %>
      <%= f.association :tags,
                  as: :check_boxes,
                  input_html: { class: "tag-selector" },
                  item_wrapper_class: 'tag-item' %>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6 mb-3">
      <p>Rating : <%= @pin.rating %>/5</p>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-12 col-md-6">
      <div class="d-flex justify-content-between px-5 py-3">

        <%= link_to "Visited",
                    visit_pin_path(@pin), class:"btn btn-primary",
                    data: {turbo_method: :patch}
        %>
        <%= link_to "To visit",
                    to_visit_pin_path(@pin), class:"btn btn-primary",
                    data: {turbo_method: :patch}
        %>
        <%= link_to "Public",
                    public_pin_path(@pin), class:"btn btn-primary",
                    data: {turbo_method: :patch}
        %>
        <%= link_to "Private",
                    private_pin_path(@pin), class:"btn btn-primary",
                    data: {turbo_method: :patch}
        %>
      </div>
    </div>
  </div>

    <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
    <form>
      <div class="form-group">
      <label for="exampleFormControlTextarea1"></label>
      <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Add your comments here..."></textarea>
      </div>
    </form>
    </div>
    </div>
    <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
    <a href="..." class="btn btn-primary btn-block">Save</a>
    </div>
  </div>
  </div>
</div>
