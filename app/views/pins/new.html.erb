<div class="row justify-content-center">
  <div class="col-12 col-md-6 px-5 pb-3">
    <h1>New pin</h1>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-12 col-md-6">
    <div class="p-5">
      <%= simple_form_for(@pin) do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <% collection = [
        'utensils',
        'ice-cream',
        'burger',
        'pizza-slice',
        'carrot',
        'mug-hot',
        'martini-glass',
        'beer-mug-empty',
        'bag-shopping',
        'tree',
        'landmark',
        'music'
        ] %>
        <% collection.each do |icon| %>
          <label class="icon_checkbox">
            <input type="radio" value=<%= icon %> name="pin[icon]"><%= "<i class='fa-solid fa-#{icon}'></i>".html_safe %>
          </label>
        <% end %>
        <%= f.input :rating, collection: [1, 2, 3, 4, 5] %>
        <%= f.input :comments %>
        <%= f.input :photo, as: :file %>
        <%= f.submit "Save", class: "form-button" %>
      <% end %>
    </div>
  </div>
</div>
